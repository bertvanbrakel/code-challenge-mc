{
  "name": "moneycatcha",
  "version": "1.0.0",
  "description": "moneycatcha test",
  "main": "build/js/src/index.js",
  "types": "build/js/src/index.d.ts",
  "private": true,
  "author": "Bert van Brakel",
  "license": "SEE LICENSE IN LICENSE.md",
  "config": {
    "env": "dev"
  },
  "dependencies": {
    "@firebase/firestore-types": "^1.10.1",
    "express": "^4.17.1",
    "firebase-admin": "^8.6.0",
    "firebase-functions": "^3.12.0",
    "node": "^14.4.0",
    "tslib": "^2.0.3"
  },
  "devDependencies": {
    "@firebase/testing": "^0.20.11",
    "@types/express": "^4.17.3",
    "@types/jest": "^26.0.14",
    "@types/node": "^10.17.48",
    "firebase-functions-test": "^0.1.6",
    "firebase-tools": "^8.11.1",
    "jest": "^26.6.3",
    "prettier": "2.1.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5"
  },
  "scripts": {
    "// ----------- code quality -----------": "",
    "pre-commit": "npm run lint",
    "format": "npx prettier --write .",
    "lint": "npx prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "// ----------- build and run -----------": "",
    "clean": "rm -fR build/* && rm -fR node_modules/*",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && npm run firebase:emulators",
    "deploy": "npm run firebase:deploy",
    "// ----------- testing -----------": "",
    "test": "npm run :test",
    "test:watch": "npm run :test -- --watch",
    ":test": "jest --verbose=true --detectOpenHandles --coverageDirectory build/jest-coverage ",
    "emulators": "npm run firebase:emulators",
    "// ----------- firebase (hosting) -----------": "",
    "  // run the api using the firebase local emulators": "",
    "firebase:emulators": "npm run build && npm run :firebase:cmd -- emulators:start --only functions",
    "  // deploy the api to the cloud": "",
    "firebase:deploy": "npm run :firebase:cmd deploy --only functions:api",
    "firebase:logs": "npm run :firebase:cmd -- functions:log --lines 1000",
    "firebase:logs:web": "npm run :firebase:cmd -- functions:log --lines 1000 --open",
    "firebase:shell": "npm run :firebase:cmd -- functions:shell",
    "firebase:login": "npm run :firebase:cmd -- login",
    ":firebase:cmd": "firebase --project moneycatcha-dev "
  }
}
